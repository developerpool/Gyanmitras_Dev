    <script src="~/assets/js/scripts.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#btnforgetpwd").click(function () {
                if ($("#ForgetPwdUserName").val().trim().length > 0) {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("SendMail", "Account")",
                        //  url: "../Account/SendMail",
                        beforeSend: function () {
                            $(".modalBgLoader, .modalLoaderCenter").show();
                        },
                        complete: function () {
                            $(".modalBgLoader, .modalLoaderCenter").hide();
                        },
                        data: { 'UserName': $("#ForgetPwdUserName").val() },
                        traditional: true,
                        success: function (Msg) {
                            $("#ModalRemarks").modal('hide');
                            $(".modalBgLoader, .modalLoaderCenter").hide();
                            alert(Msg);
                        }
                    });
                }
                else {
                    alert('@GyanmitrasLanguages.LocalResources.Resource.UserNameValidation.');
                }
            });
        });
    </script>
